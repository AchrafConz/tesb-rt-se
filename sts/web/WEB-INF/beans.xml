<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:jaxws="http://cxf.apache.org/jaxws"
	xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
http://cxf.apache.org/jaxws http://cxf.apache.org/schemas/jaxws.xsd">

	<import resource="classpath:META-INF/cxf/cxf.xml" />
	<import resource="classpath:META-INF/cxf/cxf-extension-soap.xml" />
	<import resource="classpath:META-INF/cxf/cxf-servlet.xml" />
	
<bean id="securityTokenServiceProviderBean" class="org.oasis_open.docs.ws_sx.ws_trust._200512.wsdl.SecurityTokenResponseServiceImpl">
</bean>  
	
<jaxws:endpoint id="SecurityTokenResponseService"
    implementor="#securityTokenServiceProviderBean"
    address="/SecurityTokenResponseService" />
 </beans>


